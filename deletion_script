#!/bin/bash

if [ $# -ne 1 ]
then
  echo "Usage: ./deletion_script <container name>"
  exit 1
fi

containerName=$1

sudo screen -S "mitm_${containerName}" -X quit

sudo lxc stop "$containerName"

while sudo lxc info "$containerName" | grep -q Running; do
    /home/aces/Bumblebees/slack_error.sh C09QG120EEA "$(date): $containerName not stopped yet, sleeping for 10 seconds and trying again"
    sleep 10
done


sudo lxc delete "$containerName"
