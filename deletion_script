#!/bin/bash

if [ $# -ne 1 ]
then
  echo "Usage: ./deletion_script <container name>"
  exit 1
fi

containerName=$1

sudo screen -S "mitm_${containerName}" -X quit 2> /home/aces/Bumblebees/error.log

sudo lxc stop "$containerName" 2> /home/aces/Bumblebees/error.log
sudo lxc delete "$containerName" 2> /home/aces/Bumblebees/error.log
