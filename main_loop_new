#!/bin/bash

if [ $# -ne 2 ]
then
  echo "Usage: profile container_name"
fi

profile=$1
con_name=$2

while true
do
   num=$(python3 -c "import random; print(random.randint(1,3))")
   echo "config num is $num"
  ./creation $profile $con_name $num

  screen -dmS tail1 ./copy_auth.sh $con_name
  sudo tail -F mitm_test | while read -r LINE
 do
      if echo "$LINE" | grep "Attacker closed connection"
      then


          ./deletion_script $con_name
          pkill -f "tail -F mitm_test"
      fi
  done
done


